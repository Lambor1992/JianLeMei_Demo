<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_social_export_icon"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/zjzx_2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_social_export_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名: "
            android:textSize="32px" />

        <TextView
            android:id="@+id/item_social_export_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="职位: "
            android:textSize="14dp" />

        <TextView
            android:id="@+id/item_social_export_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_social_export_name"
            android:layout_weight="1"
            android:gravity="center"
            android:text="归宿医院" />

        <TextView
            android:id="@+id/item_social_export_expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="擅长" />
    </LinearLayout>
</LinearLayout>
