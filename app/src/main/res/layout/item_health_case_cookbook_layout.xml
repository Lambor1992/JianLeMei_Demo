<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_health_case_cookbook_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:scaleType="fitXY"
        android:src="@drawable/content_icon_cont" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_health_case_cookbook_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="宫爆鸡丁" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_health_case_cookbook_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="2016-04-14" />

            <TextView
                android:id="@+id/item_health_case_cookbook_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="left|center_vertical"
                android:textColor="#13b7f5"
                android:text="10000" />

            <TextView
                android:id="@+id/item_health_case_cookbook_review"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="left|center_vertical"
                android:textColor="#ff3f82"
                android:text="10000" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
