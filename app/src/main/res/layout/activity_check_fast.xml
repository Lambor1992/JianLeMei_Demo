<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffef3f7"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2BBFFF"
        android:gravity="center_vertical">

        <com.jlm.app.jianlemei_demo.widget.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titlename="" />

        <TextView
            android:id="@+id/txt_tjb_principle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_kong"
            android:clickable="true"
            android:gravity="center"
            android:padding="3sp"
            android:text="测量原理  "
            android:textColor="#fff" />
    </RelativeLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/finger_camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="35dp"
        android:text="1. 用一只手握着手机."
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="35dp"
        android:lineSpacingMultiplier="1.5"
        android:text="2.  把您另一只手的食指放在您的手机背面的摄像头和闪光灯上，
以确保他们已完全被覆盖."
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="3.保持住这个姿势直到测试完成."
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_tjb_start"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_picx128"
        android:gravity="center"
        android:text="开始检测"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold" />
</LinearLayout>