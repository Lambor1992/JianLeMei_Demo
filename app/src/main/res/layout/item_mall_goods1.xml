<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_mall_goods_img1"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_mall_goods_name1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="鱼油"
                android:textColor="#606060"
                android:textSize="32px" />

            <TextView
                android:id="@+id/item_mall_goods_descibe1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="冰雪节限定"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_mall_goods_price1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="特惠价9998" />

            <TextView
                android:id="@+id/item_mall_goods_discountprice1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="惊爆价998"
                android:textColor="#FF0000" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>